<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zuobiao.analysis.privilege.config.dao.IBaseMapRoleDimAuthDao">
	<resultMap id="BaseMapRoleDimAuthEntityMap" type="com.zuobiao.analysis.privilege.config.entity.BaseMapRoleDimAuthEntity">
		<result column="pk_id" property="id" />
		<result column="role_id" property="roleId" />
		<result column="dimauth_id" property="dimAuthId" />
		<result column="status" property="status" />
		<result column="create_user" property="createUser" />
		<result column="create_time" property="createTime" />
		<result column="update_user" property="updateUser" />
		<result column="update_time" property="updateTime" />
	</resultMap>
	
	<sql id="BaseMapRoleDimAuthEntity_Column_List">
		`pk_id` , `role_id` , `dimauth_id` , `status` , `create_user` , `create_time` , `update_user` , `update_time` 
	</sql>
	
	<select id="selectRoleDimAuthByRoleIds" resultMap="BaseMapRoleDimAuthEntityMap">
		SELECT 
			<include refid="BaseMapRoleDimAuthEntity_Column_List"/>
		FROM
			`priv_map_role_dataauth`
		WHERE 1=1 
		and `role_id` IN
		<foreach item="item" collection="roleIdArray" open="(" separator="," close=")">
			#{item}
		</foreach>
		AND STATUS != -1
	</select>
	
		<update id="delete" parameterType="java.lang.Integer">
				UPDATE `priv_map_role_dataauth`
				set `status` = -1
				WHERE `pk_id` in 
			     <foreach collection="list" item="item"  open="(" close=")" separator=",">
			     	#{item}
			     </foreach>
		</update>
		
		
			<insert id="insertCodeBatch" parameterType="com.zuobiao.analysis.privilege.config.entity.BaseMapRoleDimAuthEntity">
				INSERT INTO `priv_map_role_dataauth` (
					`role_id`,
					`dimauth_id`,
					`status`,
					`create_user`,
					`create_time`
				)
				VALUES
				 <foreach collection="list" item="item"  separator=",">
					(
					#{item.roleId},
					#{item.dimAuthId},
					#{item.status},
					#{item.createUser},
					#{item.createTime}
					)
				</foreach>
			</insert>
</mapper>
