<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zuobiao.analysis.privilege.config.dao.IBaseMapRolePrivDao">
	<resultMap id="BaseMapRolePrivEntityMap" type="com.zuobiao.analysis.privilege.config.entity.BaseMapRolePrivEntity">
		<result column="pk_id" property="id" />
		<result column="role_id" property="roleId" />
		<result column="priv_visit_id" property="privVisitId" />
		<result column="status" property="status" />
		<result column="create_user" property="createUser" />
		<result column="create_time" property="createTime" />
		<result column="update_user" property="updateUser" />
		<result column="update_time" property="updateTime" />
	</resultMap>
	
	<sql id="BaseMapRolePrivEntity_Column_List">
		`pk_id` , `role_id` , `priv_visit_id` , `status` , `create_user` , `create_time` , `update_user` , `update_time` 
	</sql>
	
	<select id="selectConfPrivByRoleIds" resultMap="BaseMapRolePrivEntityMap">
		SELECT 
			<include refid="BaseMapRolePrivEntity_Column_List"/>
		FROM
			`priv_map_role_visit`
		WHERE 1=1
		and `role_id` IN
		<foreach item="item" collection="roleIdArray" open="(" separator="," close=")">
			#{item}
		</foreach>
		AND STATUS != -1
	</select>
	<select id="selectByIdMenuRole" resultType="com.zuobiao.analysis.privilege.config.bean.RoleVisitBean">
	SELECT
			v.menu_id 'menuId',
			rv.role_id 'roleId'
		FROM
			priv_map_role_visit rv
		LEFT JOIN priv_conf_visit v ON v.priv_visit_id = rv.priv_visit_id
		WHERE
			rv.`status` = 1
		AND v.`status` = 1
		AND rv.pk_id in
		<foreach item="item" collection="idArray" open="(" separator="," close=")">
			#{item}
		</foreach>
		
	</select>
	
	<update id="delete" parameterType="java.lang.Integer">
			UPDATE `priv_map_role_visit`
			set `status` = -1
			WHERE `pk_id` in 
		     <foreach collection="list" item="item"  open="(" close=")" separator=",">
		     	#{item}
		     </foreach>
	</update>
	
	
		<insert id="insertCodeBatch" parameterType="com.zuobiao.analysis.privilege.config.entity.BaseMapRolePrivEntity">
			INSERT INTO `priv_map_role_visit` (
				`role_id`,
				`priv_visit_id`,
				`status`,
				`create_user`,
				`create_time`
			)
			VALUES
		 <foreach collection="list" item="item"  separator=",">
			(
			#{item.roleId},
			#{item.privVisitId},
			#{item.status},
			#{item.createUser},
			#{item.createTime}
			)
		</foreach>
	</insert>
</mapper>
